<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/end">

    <Button
        android:id="@+id/mainmenu_button"
        android:layout_width="137dp"
        android:layout_height="84dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="172dp"
        android:backgroundTint="#6B6B6B"
        android:fontFamily="@font/pixelify_sans_semibold"
        android:text="home"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player_name_input" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="122dp"
        android:layout_marginBottom="92dp"
        android:fontFamily="@font/pixelify_sans_semibold"
        android:text="GAME OVER"
        android:textColor="#FF0000"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/mainmenu_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/player_name_input"
        android:layout_width="295dp"
        android:layout_height="57dp"
        android:layout_marginStart="218dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="218dp"
        android:layout_marginBottom="11dp"
        android:hint="Enter Your Name"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/submit_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/submit_btn"
        android:layout_width="137dp"
        android:layout_height="84dp"
        android:layout_marginStart="187dp"
        android:layout_marginTop="65dp"
        android:backgroundTint="#6B6B6B"
        android:fontFamily="@font/pixelify_sans_semibold"
        android:text="SUBMIT"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player_name_input" />


</androidx.constraintlayout.widget.ConstraintLayout>